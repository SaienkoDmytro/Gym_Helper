<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.gymhelper.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_timerFragment"
            app:destination="@id/timerFragment" />
        <action
            android:id="@+id/action_startFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_startFragment_to_mainActivity2"
            app:destination="@id/mainActivity"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_startFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/timerFragment"
        android:name="com.example.gymhelper.TimerFragment"
        android:label="fragment_timer"
        tools:layout="@layout/fragment_timer" >
        <action
            android:id="@+id/action_timerFragment_to_startFragment"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_timerFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_timerFragment_to_mainActivity2"
            app:destination="@id/mainActivity"
            app:launchSingleTop="true" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.gymhelper.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.gymhelper.Account.RegistrationFragment"
        android:label="registration_fragment"
        tools:layout="@layout/registration_fragment" >
        <action
            android:id="@+id/action_registrationFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_registrationFragment_to_changeAccountFragment"
            app:destination="@id/changeAccountFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.gymhelper.Account.AccountFragment"
        android:label="account_fragment"
        tools:layout="@layout/account_fragment" >
        <action
            android:id="@+id/action_accountFragment_to_changeAccountFragment"
            app:destination="@id/changeAccountFragment" />
        <action
            android:id="@+id/action_accountFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/changeAccountFragment"
        android:name="com.example.gymhelper.Account.ChangeAccountFragment"
        android:label="change_account_fragment"
        tools:layout="@layout/change_account_fragment" >
        <action
            android:id="@+id/action_changeAccountFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />
    </fragment>
</navigation>